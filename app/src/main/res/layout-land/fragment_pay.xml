<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PayFragment">


    <EditText
        android:id="@+id/valueAddBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="107dp"
        android:background="@color/white"
        android:elevation="@dimen/standard_elevation_button"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0.00"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="30dp" />

    <Button
        android:id="@+id/addBalanceButton"
        android:layout_width="269dp"
        android:layout_height="33dp"
        android:layout_below="@+id/valueAddBalance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/standard_elevation_button"
        android:hyphenationFrequency="full"
        android:text="@string/add_to_amount"
        android:textColor="@color/white"
        android:textSize="@dimen/text_dimension" />

    <TextView
        android:id="@+id/payingPaypal"
        android:layout_width="355dp"
        android:layout_height="18dp"
        android:layout_below="@+id/addBalanceButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="163dp"
        android:text="@string/paying_paypal"
        android:textColor="@color/textPrimaryColor" />


</RelativeLayout>