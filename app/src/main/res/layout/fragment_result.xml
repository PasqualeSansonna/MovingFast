<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/fragment_result"
    tools:context=".ResultFragment">

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textViewChronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ridingTime"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center">
       </TextView>
        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textColor="@color/textPrimaryColor">
        </Chronometer>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTraveledDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/traveledDistance"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:id="@+id/textViewValueTraveledDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/textPrimaryColor"
                android:text="0">
            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/openMapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/standard_elevation_button"
            android:textColor="@color/white"
            android:text="@string/GMapButton"></Button>
        <Button
            android:id="@+id/closeRentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/standard_elevation_button"
            android:textColor="@color/white"
            android:text="@string/closeRentButton"
            android:gravity="center">
        </Button>
        <Button
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/standard_elevation_button"
            android:textColor="@color/white"
            android:text="@string/reportButton"
            android:gravity="center"></Button>
    </LinearLayout>
</FrameLayout>